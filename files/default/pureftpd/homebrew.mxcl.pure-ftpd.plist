<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>KeepAlive</key>
    <true/>
    <key>Label</key>
    <string>homebrew.mxcl.pure-ftpd</string>
    <key>Program</key>
    <string>/usr/local/sbin/pure-ftpd</string>
    <key>ProgramArguments</key>
    <array>
      <string>/usr/local/opt/pure-ftpd/sbin/pure-ftpd</string>
      <string>--chrooteveryone</string>
      <string>--login</string>
      <string>puredb:/usr/local/etc/pureftpd.pdb</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>WorkingDirectory</key>
    <string>/usr/local/var</string>
    <key>StandardErrorPath</key>
    <string>/usr/local/var/log/pure-ftpd.log</string>
    <key>StandardOutPath</key>
    <string>/usr/local/var/log/pure-ftpd.log</string>
  </dict>
</plist>
