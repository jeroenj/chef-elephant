# Ruby
export RUBYOPT="rubygems"

<% if !`which subl`.empty? || node[:recipes].include?('elephant::sublime_text') %>
# Sublime Text as default text editor
export EDITOR="subl -w"
export VISUAL="subl"

<% end %>
# In order to prefer homebrew's bin dir
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

<% if !`which node`.empty? || node[:recipes].include?('elephant::node') %>
export PATH=$PATH:/usr/local/share/npm/bin:./node_modules/.bin

<% end %>
# Make sure it is set to UTF-8
export LANG="en_US.UTF-8"
